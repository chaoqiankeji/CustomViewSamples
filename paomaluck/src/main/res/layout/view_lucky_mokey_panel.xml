                    android:layout_height="88dp" />


                <juice.paomaluck.SingleAwardsView
                    android:id="@+id/item7"
                    android:layout_margin="1dp"
                    android:layout_width="103dp"
                    android:layout_height="88dp" />


                <juice.paomaluck.SingleAwardsView
                    android:id="@+id/item8"
