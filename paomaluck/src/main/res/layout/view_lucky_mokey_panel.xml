                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3">

                <juice.paomaluck.SingleAwardsView
                    android:id="@+id/item1"
                    android:layout_margin="1dp"
                    android:layout_width="103dp"
                    android:layout_height="88dp" />

